{
  "name": "gitify",
  "version": "4.3.2",
  "description": "GitHub Notifications on your menu bar.",
  "main": "main.js",
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "watch": "webpack --config webpack.common.js --watch",
    "make:linux": "electron-builder --linux",
    "make:macos": "electron-builder --mac --universal",
    "make:win": "electron-builder --win",
    "postinstall": "node scripts/patch_menubar",
    "install:win": "yarn && yarn build && yarn make:win && cd dist && \"Gitify Setup %npm_package_version%.exe\" & cd ..",
    "prettier:check": "prettier --check 'src/**/*.{js,ts,tsx}'",
    "prettier:apply": "prettier --write 'src/**/*.{js,ts,tsx}'",
    "jest": "jest",
    "test": "yarn jest",
    "start": "electron . -â€“enable-logging"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/manosim/gitify.git"
  },
  "keywords": [
    "gitify",
    "github",
    "notifier",
    "notifications",
    "electron",
    "atom",
    "shell",
    "app",
    "tray"
  ],
  "author": {
    "name": "Emmanouil Konstantinidis",
    "email": "hello@manos.im"
  },
  "contributors": [
    {
      "name": "Emmanouil Konstantinidis",
      "url": "https://github.com/manosim"
    },
    {
      "name": "Jake 'Sid' Smith",
      "url": "https://github.com/JakeSidSmith"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/manosim/gitify/issues"
  },
  "homepage": "https://www.gitify.io/",
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "setupFiles": [
      "<rootDir>/src/__helpers__/setupEnvVars.js"
    ],
    "testEnvironment": "jsdom",
    "coverageThreshold": {
      "global": {
        "lines": 90
      }
    }
  },
  "build": {
    "appId": "com.electron.gitify",
    "productName": "Gitify",
    "files": [
      "build/**/*",
      "assets/**/*",
      "index.html",
      "LICENSE",
      "main.js",
      "first-run.js"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/images/app-icon.icns",
      "identity": "Emmanouil Konstantinidis (3YP8SXP3BF)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "./entitlements/entitlements.mac.plist",
      "entitlementsInherit": "./entitlements/entitlements.mac.plist",
      "publish": [
        "github"
      ]
    },
    "dmg": {
      "icon": "assets/images/app-icon.icns",
      "sign": false
    },
    "win": {
      "target": "nsis",
      "icon": "assets/images/app-icon.ico"
    },
    "nsis": {
      "oneClick": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development",
      "maintainer": "Emmanouil Konstantinidis"
    },
    "afterSign": "scripts/notarize.js"
  },
  "dependencies": {
    "@electron/remote": "^2.0.7",
    "@primer/octicons-react": "^11.2.0",
    "autoprefixer": "^10.1.0",
    "axios": "0.26.0",
    "date-fns": "^2.16.1",
    "electron-updater": "^4.3.9",
    "final-form": "^4.20.1",
    "lodash": "^4.17.20",
    "menubar": "^9.1.1",
    "nprogress": "=0.2.0",
    "postcss": "^8.4.8",
    "react": "=16.13.1",
    "react-dom": "=16.13.1",
    "react-emojione": "=5.0.1",
    "react-final-form": "^6.4.0",
    "react-router-dom": "^5.2.0",
    "react-transition-group": "^4.4.1",
    "tailwindcss": "^2.0.2",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.2"
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.2",
    "@testing-library/react-hooks": "^3.7.0",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.165",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.39",
    "@types/react-router-dom": "^5.1.6",
    "@types/react-transition-group": "^4.4.0",
    "css-loader": "^6.7.1",
    "electron": "^17.1.2",
    "electron-builder": "^22.14.13",
    "electron-notarize": "^1.0.1",
    "jest": "^27.5.1",
    "nock": "^13.0.5",
    "postcss-loader": "^6.2.1",
    "prettier": "2.5.1",
    "react-test-renderer": "=16.13.1",
    "style-loader": "^3.3.1",
    "ts-jest": "^27.1.3",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2",
    "webpack-merge": "^5.8.0"
  }
}
